
export PATH=$PATH:~/bin

# silences zsh message on osx
export BASH_SILENCE_DEPRECATION_WARNING=1

# simple aliases
alias ls='ls --color=auto'
alias ll='ls -la'
alias grep='grep --color'
alias c='clear'

alias cm=chezmoi

EDITOR=vim

if [ -f ~/.bash_profile.local ]; then
    source ~/.bash_profile.local
fi

if [ -f ~/.bashrc ]; then
	source ~/.bashrc
fi

. "$HOME/.cargo/env"
